<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/trending_movie_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="6dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/trending_movie_poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_trending_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antman and the Wasp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/txt_trending_movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14 Apr 2023"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/default_grey"
            />

    </LinearLayout>
</RelativeLayout>